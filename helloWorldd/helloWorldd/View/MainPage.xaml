<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:helloWorldd"
             x:Class="helloWorldd.MainPage">

    <ContentPage.Content>
        <StackLayout Padding="50">
            <Label Text="{Binding Prompt}" FontSize="Large"/>
            <Label Text="{Binding Name}" FontSize="Large"/>
           
            <Button Text="Initial Layout" Clicked="Button_Clicked" />
            <Button Text="Advanced Grid Layout" Clicked="Button_Clicked_1" />
            <Button Text="Data Binding" Clicked="Button_Clicked_2" />
         
            <Button Text="List Views" Clicked="Button_Clicked_4" />
            <Button Text="Behaviours" Clicked="Button_Clicked_5" />
            <Button Text="Messages" Clicked="Button_Clicked_6" />
            <Button Text="Creating a collection in Memory" Clicked="Button_Clicked_7" />
            <Button Text="Storing Collection to SQLite" Clicked="Button_Clicked_8"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>